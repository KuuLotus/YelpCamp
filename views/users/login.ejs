<% layout("layouts/boilerplate") %>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img
          src="https://images.unsplash.com/photo-1618526640189-81726d5dd707?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTV8fCVFMyU4MiVBRCVFMyU4MyVBMyVFMyU4MyVCMyVFMyU4MyU5N3xlbnwwfHwwfHx8MA%3D%3D&auto=format&fit=crop&w=500&q=60"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <h5 class="card-title">ログイン</h5>
          <form action="/login" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
              <label for="username" class="form-label">ユーザー名</label>
              <input
                type="text"
                name="username"
                id="title"
                class="form-control"
                required
                autofocus
              />
              <div class="valid-feedback">OK!</div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">パスワード</label>
              <input
                type="password"
                name="password"
                id="password"
                class="form-control"
                required
              />
              <div class="valid-feedback">OK!</div>
            </div>
            <div class="d-grid">
              <button class="btn btn-success">ログイン</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
